{
  "rules": {
    ".read": "true",
    ".write": "true",
    "contacts": {
      "$contact": {
        ".validate": "newData.child('businessNumber').exists() && newData.child('name').exists() && newData.child('primaryBusiness').exists()",
        "businessNumber": {
          ".validate": "newData.isString() && newData.val().matches(/^[0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9][0-9]/);"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length <= 48 && newData.val().length >=2"
        },
        "primaryBusiness": {
          ".validate": "newData.val().matches(/^(Fisher|Distributor|Processor)$/) || newData.val().matches(/^Fish Monger$/);"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length < 50"
        },
        "province": {
          ".validate": "newData.isString() && newData.val().matches(/^(NB|NS)$/);"
        }

      }
    }
  }
}